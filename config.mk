CONFIG_BZIP2=1
CONFIG_GZIP=1
CONFIG_PKGFMT_V1=1
CONFIG_PKGFMT_V2=1
CONFIG_BDB=1
CONFIG_MD5_DEFAULT=1
CONFIG_MTRACE=1

CC=/usr/bin/gcc-3.4.5 -m32 -mcpu=ultrasparc

CFLAGS=-O2 -g -Werror

CFLAGS+=-DBUILD_DATE=\"$(shell date --iso-8601)\"

ifdef CONFIG_BZIP2
	CFLAGS+=-DCOMPRESSION_BZIP2
endif

ifdef CONFIG_GZIP
	CFLAGS+=-DCOMPRESSION_GZIP
endif

ifdef CONFIG_PKGFMT_V1
	CFLAGS+=-DPKGFMT_V1
endif

ifdef CONFIG_PKGFMT_V2
	CFLAGS+=-DPKGFMT_V2
endif

ifdef CONFIG_BDB
	CFLAGS+=-DDB_BDB
endif

ifdef CONFIG_MD5_DEFAULT
	CFLAGS+=-DCHECK_MD5_DEFAULT
endif

ifdef CONFIG_MTRACE
	CFLAGS+=-DUSE_MTRACE
endif

LDFLAGS=

ifdef CONFIG_BDB
	LDFLAGS+=-ldb
endif

ifdef CONFIG_BZIP2
	LDFLAGS+=-lbz2
endif

ifdef CONFIG_GZIP
	LDFLAGS+=-lz
endif
